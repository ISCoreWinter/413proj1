@{
    ViewBag.Title = "Sign Up Continued";
}
@model _413proj1.Models.ViewModels.ReservationViewModel
<!--Form for user to input additional reservation information for selected appt time-->
<div class="text-center"><br />
    <h2>Add Your Information</h2>
    <p style="font-size:larger">Please fill in the following information for you reservation slot of <b>@Model.tour.Day</b> at <b>@Model.tour.StartTime:</b></p>
</div>
<br />
<div class="text-center">
    <form asp-action="AddInfo" method="post">
        <div>
            <label asp-for="reservation.GroupName">Group Name:</label>
            <input asp-for="reservation.GroupName" />
        </div>
        <div>
            <label asp-for="reservation.Email">Email:</label>
            <input asp-for="reservation.Email" />
        </div>
        <div>
            <label asp-for="reservation.PhoneNumber">Phone Number:</label>
            <input asp-for="reservation.PhoneNumber" />
        </div>
            <input asp-for="reservation.TourId" type="hidden" name="TourId"
                   value="@Model.tour.TourId"/>
        <div asp-validation-summary="All"></div>
        <span class="card-text p-1 text-center">
            <button type="submit" class="btn btn-success pull-right">
                Submit Reservation
            </button>
        </span><br />
    </form><br />
</div>