@{
    ViewBag.Title = "Sign Up Page";
}

@model TourViewModel

<div>
    <h2>Select a time to sign up</h2>
    <table>
        <thead>
            <tr>
                <th>Day</th>
                <th>Start Time</th>
                <th>Reserved</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
           @foreach (var x in Model.Tours)
            {
                <partial name="ReservationSummary" model="x" />
            }
        </tbody>
    </table>
</div>