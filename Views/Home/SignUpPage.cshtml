@{
    ViewBag.Title = "Sign Up Page";
}

@model TourViewModel
<div class="text-center col-10">
    <br />
    <h2>Select a time to sign up below:</h2>
    <form asp-action="SignUpPage" method="post">
        <table class="table table-hover table-bordered" style="margin-left: auto; margin-right: auto;">
            <thead class="table-active">
                <tr>
                    <th scope="col">Day</th>
                    <th scope="col">Start Time</th>
                    @*<th scope="col">Reserved</th>*@
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.Tours)
                {
                    <tr>
                        <td>@x.Day</td>
                        <td>@x.StartTime</td>
                        @ViewBag.TimeSelected = @x.StartTime
                        @*<td>@x.Reserved</td>*@
                        <td>
                            <button type="submit" name="tourTime">Select Time</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>