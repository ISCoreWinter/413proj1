@{
    ViewBag.Title = "Sign Up Page";
}

@model TourViewModel

<div>
    <h2>Select a time to sign up</h2>
    <table>
        <thead>
            <tr>
                <th>Day</th>
                <th>Start Time</th>
                <th>Reserved</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
           @foreach (var x in Model.Tours)
            {
            <tr>
                <td>@x.Day</td>
                <td>@x.StartTime</td>
                <td>@x.Reserved</td>
                @*put something here for them to select the time and sends them to form @<td></td>*@
            </tr> 
            }
        </tbody>
    </table>
</div>