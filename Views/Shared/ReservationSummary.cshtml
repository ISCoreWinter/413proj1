@model TourTimes

<form id="@Model.TourId" asp-action="SignUpPage" method="post">
    <tr>
        <td>@Model.Day</td>
        <td>@Model.StartTime</td>
        <td>@Model.Reserved</td>

        <td>

            <input type="hidden" asp-for="@Model.TourId" />
            <span class="card-text p-1">
                <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                    Reserve Time
                </button>
            </span>
        </td>
    </tr>
</form>