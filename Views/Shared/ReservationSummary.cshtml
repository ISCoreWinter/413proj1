@model TourTimes
<!--Allows them to select a time-->
<div class="text-center; container; row">
    <form id="@Model.TourId" asp-action="SignUpPage" method="post">
        <tr>
            <td class="th-sm" style="text-align:center">@Model.Day</td>
            <td class="th-sm" style="text-align:center">@Model.StartTime</td>
            @*<td style="text-align:center">@Model.Reserved</td>*@

            <td class="th-sm" style="text-align:center">

                <input type="hidden" asp-for="@Model.TourId" />
                <span class="card-text p-1 text-center">
                    <button type="submit" class="btn btn-success btn-sm pull-right">
                        Reserve Time
                    </button>
                </span>
            </td>
        </tr>
    </form>
</div>
