<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <header>
        <nav class="navbar navbar-dark bg-dark navbar-expand-sm navbar-toggle">
            <h4 class="text-light">Come See the Layton, Utah Temple</h4>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse p-3">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="SignUpPage">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="ViewAppointments">View Appointments</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer class="text-center border-top col-12">Designed and Built by Group 3-11 - Copyright 2021</footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>
